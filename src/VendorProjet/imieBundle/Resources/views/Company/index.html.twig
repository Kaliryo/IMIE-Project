{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Company list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idcompany</th>
                <th>Name</th>
                <th>Siret</th>
                <th>Datestartfriendship</th>
                <th>Datecreation</th>
                <th>Salariesnumber</th>
                <th>Resume</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idCompany }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.siret }}</td>
                <td>{% if entity.dateStartFriendship %}{{ entity.dateStartFriendship|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateCreation %}{{ entity.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.salariesNumber }}</td>
                <td>{{ entity.resume }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('company_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('company_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('company_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
