{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CV</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Idcv</th>
                <td>{{ entity.idCV }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ entity.resume }}</td>
            </tr>
            <tr>
                <th>Visibility</th>
                <td>{{ entity.visibility }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cv') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('cv_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
